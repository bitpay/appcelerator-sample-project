function fetchScriptsFromJson(){
var
jsonFile,
settings,JSON_FILE_NAME='bootstrap.json';

try{


if(jsonFile=Ti.Filesystem.getFile(Ti.Filesystem.getResourcesDirectory(),'ti.internal/'+JSON_FILE_NAME),jsonFile.exists())return(
settings=JSON.parse(jsonFile.read().text),
Array.isArray(settings.scripts)?
settings.scripts:

[]);


}catch(error){
Ti.API.error('Failed to read "'+JSON_FILE_NAME+'". Reason: '+error.message);
}
return null;
}







function fetchScriptsFromResourcesDirectory(){




function loadFrom(file){
var index,
fileNameArray,
bootstrapPath;

if(file)
if(!file.isDirectory())







0<=file.name.search(/.bootstrap.js$/)&&(


bootstrapPath=file.nativePath,
bootstrapPath=bootstrapPath.substr(
resourceDirectoryPath.length,
bootstrapPath.length-resourceDirectoryPath.length-3),
bootstrapScripts.push(bootstrapPath));else if(fileNameArray=file.getDirectoryListing(),fileNameArray)for(index=0;index<fileNameArray.length;index++)loadFrom(Ti.Filesystem.getFile(file.nativePath,fileNameArray[index]));


}var resourceDirectory=Ti.Filesystem.getFile(Ti.Filesystem.getResourcesDirectory()),resourceDirectoryPath=resourceDirectory.nativePath,bootstrapScripts=[];

return loadFrom(resourceDirectory),bootstrapScripts;
}





